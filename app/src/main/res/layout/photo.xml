<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="yuc1996229.iim.ncku.edu.tw.finalproject.MainActivity">

    <ImageView
        android:id="@+id/paint"
        android:layout_width="match_parent"
        android:layout_height="350dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingTop="100dp"
        android:src="@drawable/paint" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="350dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingTop="100dp" />

    <Button
        android:id="@+id/take"
        android:text="Take a picture"
        android:textColor="#FFFCF2"
        android:textSize="18sp"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/ok2"
        android:layout_alignRight="@+id/ok2"
        android:layout_alignTop="@+id/select"
        android:background="@drawable/buttom_shape"
        android:shadowColor="#D6D4CB"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <Button
        android:id="@+id/select"
        android:text="Select from album"
        android:textColor="#FFFCF2"
        android:textSize="18sp"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_above="@+id/ok2"
        android:layout_alignLeft="@+id/ok2"
        android:layout_alignStart="@+id/ok2"
        android:layout_marginBottom="22dp"
        android:background="@drawable/buttom_shape"
        android:shadowColor="#D6D4CB"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <Button
        android:id="@+id/ok2"
        android:text="OK"
        android:textColor="#FFFCF2"
        android:textSize="20sp"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:background="@drawable/buttom_shape"
        android:shadowColor="#D6D4CB"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

</RelativeLayout>
